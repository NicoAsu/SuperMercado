@page "/pasarela"

<div class="container border">

    <!-- Formulario -->
    <div class="border row justify-content-center align-items-center">
        <form action="" id="formulario-tarjeta">
            <i class="fab fa-paypal"></i>
            <h1 style="margin-top: 10px">Registro de pago</h1>

            <div class="form-group">
                <label for="" class="form-check-label">Cédula</label>
                <input type="text" name="" id="" class="form-control">
            </div>

            <div class="form-group">
                <label for="" class="form-check-label">Nombre</label>
                <input type="text" name="" id="" class="form-control">
            </div>

            <div class="form-group">
                <label for="" class="form-check-label">Apellido</label>
                <input type="text" name="" id="" class="form-control">
            </div>

            <div class="form-group">
                <label for="" class="form-check-label">Número de Tarjeta</label>
                <input type="text" id="inputNumero" class="form-control" maxlength="19">
            </div>

            <div>
                <div class="form-inline">
                    <label for="selectMes">Expiracion</label>
                    <div>
                        <input type="number" name="" id="" placeholder="MM" style="width: 45px; margin: 10px">
                    </div> /
                    <div>
                        <input type="number" name="" id="" placeholder="YY" style="width: 45px; margin: 10px">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputCCV">CCV</label>
                    <input type="text" id="inputCCV" class="form-control" maxlength="3">
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-bottom: 20px">Enviar</button>
        </form>
    </div>
</div>