@page "/Config/DetailsUser/{id}"
<h3>Details User</h3>
@if (user == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div>
        <h4 style="        text-align: center;
        color: white;
        padding: 10px;
        border-radius:5px;
        background-color: rgba(6, 7, 29,0.5)">
            Datos del Usuario
        </h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Nombre de Usuario
            </dt>

            <dd>
                @user.UserName
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @user.Email
            </dd>

            <dt>
                Número de Telefono
            </dt>

            <dd>
                @user.PhoneNumber
            </dd>

        </dl>

    </div>
}
<hr />
<h4>Pedidos Hechos Por el usuario</h4>
<table class="table">
    <thead class="thead-dark">
        <tr style="text-align:center;">
            <th scope="col">Usuario</th>
            <th scope="col">Dirección</th>
            <th scope="col">Comentario</th>
            <th scope="col">Estado</th>
            <th scope="col">Precio Total</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in pedidos)
        {
            <tr style="text-align:center;">
                <td>@user.UserName</td>
                <td>@pedido.Direccion</td>
                <td>@pedido.Comentario</td>
                <td>@pedido.Estado</td>
                <td>@pedido.PrecioTotal</td>
                <td>
                    <AuthorizeView Roles="Administrator">
                        @*<button @onclick="() => Eliminar(user.UserId)" class="btn btn-danger btn-xs" title="Eliminar">
                                <i class="oi oi-trash"></i>
                            </button>*@
                    </AuthorizeView>
                    <a href="/Config/DetailsUser/@pedido.Id" class="btn btn-primary btn-xs" title="Detalles del pedido">
                        <i class="oi oi-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-md-offset-0 col-md-10">
        <a class="btn btn-primary" href=""><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        <a class="btn btn-primary" href=""><i class="glyphicon glyphicon-pencil"></i> Editar Registro</a>
    </div>
</div>

@code {
    [Parameter]
    public string id { get; set; }

    IdentityUser user = new IdentityUser();
    IEnumerable<Pedido> listpedidos { get; set; }
    List<Pedido> pedidos = new List<Pedido>();

    protected async override Task OnInitializedAsync()
    {
        user = await DbLogin.AspNetUsers.FindAsync(id);

        listpedidos = await dataContext.Pedidos.ToListAsync();

        foreach (var item in listpedidos)
        {
            if (item.UserId == user.Id)
            {
                pedidos.Add(item);
            }
        }
    }

}
